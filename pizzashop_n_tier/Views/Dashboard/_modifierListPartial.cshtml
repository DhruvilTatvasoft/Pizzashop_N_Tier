@{
    Layout = "";
}
@model ItemModel
<thead>
    <tr>
        <th scope="col">
            <div class="form-check">
                <input class="form-check-input col1" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Name
                </label>
            </div>
        </th>
        <th scope="col">
            <div class="form-check">
                <label class="form-check-label" for="flexCheckDefault">
                    Unit
                </label>
            </div>
        </th>
        <th scope="col">Rate</th>
        <th scope="col">Quantity</th>
        <th scope="col">Action</th>
    </tr>
</thead>
<tbody>
    @foreach (var modifier in Model.modifiers)
    {
        <tr>
            <td scope="row">
                <input class="form-check-input checkedItems" type="checkbox" value="@modifier.Modifierid" />
                <label class="form-check-label" for="flexCheckDefault">
                    <img src="~/images/dining-menu.png" style="width:20%;" alt="">
                    <label for="" style="font-size: 14px;">@modifier.Modifiername</label>
                </label>

            </td>
            <td>@modifier.Unit</td>
            <td>@modifier.Modifierrate</td>
            <td>@modifier.Modifierquantity</td>
            <td>
                <div class="d-flex justify-content-start w-100 pb-2 h-100">
                    <img src="~/images/pencil-square.svg" class="me-2" alt="">
                    <img src="~/images/trash-fill.svg" style="cursor: pointer;" alt="">
                </div>
            </td>
        </tr>
    }
    <script>
    </script>
</tbody>
