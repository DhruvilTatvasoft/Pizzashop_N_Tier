@model OrderViewModel
<table class="table mb-0" id="table">
    <thead>
        <tr>
            <th scope="col">
                <label for="" class="ps-2">#Order</label>
                <img src="~/images/icons8-sorting-arrows-50.png" style="width: 15px;" alt=""></a>
            </th>
            <th scope="col">
                <label for="">Date</label>
                <img src="~/images/icons8-sorting-arrows-50.png" onclick="sortTable()" style="width: 15px;" alt="">
            </th>
            <th scope="col">Customer
                <img src="~/images/icons8-sorting-arrows-50.png" onclick="sortTable()" style="width: 15px;" alt="">
            </th>
            <th scope="col">
                <label for="">Status</label>
            </th>
            <th scope="col"><label for="">Payment Mode</label></th>
            <th scope="col"><label for="">Ratting</label></th>
            <th scope="col" class="d-flex justify-content-end align-items-center pe-4"><div>

                <label for="" class="me-2">Total Amount</label><img src="~/images/icons8-sorting-arrows-50.png" onclick="sortTable()" style="width: 15px;" alt="">
            </div>
            </th>
            <th scope="col"><label for="">Action</label></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in @Model.orders)
        {
            <tr>
                <td><label for="" class="ps-2">#@order.Orderid</label></td>
                <td>@order.Createdat.Value.Date</td>
                <td>@order.Customer.Customername</td>
                <td>@order.Status.Statusname</td>
                <td>@order.Paymentmethod</td>
                <td>
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= (order.Rattings))
                        {
                            <i class="fa fa-star text-warning"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                    fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                                    <path
                                        d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                </svg></i>
                        }
                        else
                        {
                            <i class="fa fa-star-o text-warning"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                    fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                                    <path
                                        d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.56.56 0 0 0-.163-.505L1.71 6.745l4.052-.576a.53.53 0 0 0 .393-.288L8 2.223l1.847 3.658a.53.53 0 0 0 .393.288l4.052.575-2.906 2.77a.56.56 0 0 0-.163.506l.694 3.957-3.686-1.894a.5.5 0 0 0-.461 0z" />
                                </svg></i>
                        }
                    }
                </td>
                <td><label for="" class="d-flex justify-content-end pe-4">@order.Totalamount</label></td>
                <td>
                    <div class="d-flex">
                        <i class="bi bi-filetype-pdf me-2"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                fill="currentColor" class="bi bi-filetype-pdf" viewBox="0 0 16 16">
                                <path fill-rule="evenodd"
                                    d="M14 4.5V14a2 2 0 0 1-2 2h-1v-1h1a1 1 0 0 0 1-1V4.5h-2A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v9H2V2a2 2 0 0 1 2-2h5.5zM1.6 11.85H0v3.999h.791v-1.342h.803q.43 0 .732-.173.305-.175.463-.474a1.4 1.4 0 0 0 .161-.677q0-.375-.158-.677a1.2 1.2 0 0 0-.46-.477q-.3-.18-.732-.179m.545 1.333a.8.8 0 0 1-.085.38.57.57 0 0 1-.238.241.8.8 0 0 1-.375.082H.788V12.48h.66q.327 0 .512.181.185.183.185.522m1.217-1.333v3.999h1.46q.602 0 .998-.237a1.45 1.45 0 0 0 .595-.689q.196-.45.196-1.084 0-.63-.196-1.075a1.43 1.43 0 0 0-.589-.68q-.396-.234-1.005-.234zm.791.645h.563q.371 0 .609.152a.9.9 0 0 1 .354.454q.118.302.118.753a2.3 2.3 0 0 1-.068.592 1.1 1.1 0 0 1-.196.422.8.8 0 0 1-.334.252 1.3 1.3 0 0 1-.483.082h-.563zm3.743 1.763v1.591h-.79V11.85h2.548v.653H7.896v1.117h1.606v.638z" />
                            </svg></i>

                            <a  href="@Url.Action("showOrderDetailsView","Order",new {orderid = order.Orderid})">
                        <i class="bi bi-eye"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                                <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0" />
                                <path
                                    d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7" />
                            </svg></i>
                            </a>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>

