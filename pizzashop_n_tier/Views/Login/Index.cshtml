@{
  ViewData["Title"] = "Home Page";
}
@model LoginViewModel
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home Page</title>
</head>
<link rel="stylesheet" href="~/css/index.css">

<body>
  <form class="myForm form-group w-75 mt-4" asp-action="Index" method="post">
    <label for="" class="login-text mb-3">Welcome,</label>
    <div>
      <div class="d-flex flex-column">
        <div class="input-group mb-2">
          <input type="text" class="form-control" id="emailInput" placeholder="Email" name="username">
        </div>
        <span asp-validation-for="username" class="mb-2 text-danger invalidmsg"></span>
      </div>
      <div class="d-flex flex-column">


        <div class="input-group mb-2">
          <input type="password" id class="form-control" placeholder="Password" name="password">
        </div>
        <span asp-validation-for="password" class="mb-2 text-danger invalidmsg"></span>
      </div>
      @* @if (!ViewData.ModelState.IsValid)
      {
        <div class="alert alert-danger mt-2">
          @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>
      } *@
    </div>
    <div class="d-flex flex-row justify-content-between mb-1">
      <div class="form-check">
        <input class="form-check-input" name="IsChecked" asp-for="IsChecked" type="checkbox" id="flexCheckDefault">
        <label class="form-check-label" for="flexCheckDefault">
          Remember me
        </label>
      </div>
      <div class="forgot-password mb-2">
        <a asp-controller="Login" asp-action="ForgetPass">Forgot Password </a>
      </div>
    </div>
    <button type="submit" class="btn btn-primary w-100">Login</button>

  </form>

  <script>
    $("input").focus(() => {
      $("span").css("display", "none");
      $("input").addClass("mb-2");

    })
    @* $("document").ready(()=>{

      $("input").addClass("mb-2");
      $("span").css("display", "none");
    }) *@

 

  </script>
</body>

</html>