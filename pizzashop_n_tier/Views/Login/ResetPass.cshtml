@model PasswordModel
@{
  ViewData["Title"] = "Reset Password Page";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />

    <style>
        html,body{
            height: 100%;
            width: 100%;
            /* overflow: hidden; */
        }
        .img-container img{
            height: 100%;
            width: 100%;
            object-fit: cover;
        }
        .container-fluid{
            overflow: hidden;
        }
        .form-container{
            background-color: #D8EFF7;
            
        }
        .logo-img{
            width: 14%;
            height: auto;
        }
        .ps-label{
            font-size: 36px;
            color: #1D7BB9;
        }
        input{
            height: 25%;
        }
        .label-1{
            font-weight: bold;
            font-size: 20px;
        }
        .label-2{
            font-size: 13px;
            margin-bottom: 4%;
        }
    </style>
                    <form class="myForm form-group w-75 mt-4" method="post" asp-action="ResetPass">
                        <label for="" class="label-1 mb-3">Reset Password</label><br>
                        <!-- <input type="text" class="form-control mb-4" placeholder="Username" required /> -->
                        <div class="input-group mb-3 d-flex flex-column w-100">
                            <input type="text" class="form-control w-100  mb-2 " id="emailInput" name="newpass"placeholder="New Password" aria-label="Recipient's username" aria-describedby="basic-addon2" >
                            <span asp-validation-for="confirmpass" class="text-danger invalidmsg mb-2"></span>
                            <input type="text" class="form-control w-100 " id="emailInput" name="confirmpass" placeholder="Confirm Password" aria-label="Recipient's username" aria-describedby="basic-addon2" >
                            <span asp-validation-for="confirmpass" class="text-danger invalidmsg mt-2"></span>
                            <input type="text" hidden class="form-control w-100 mb-2" id="emailInput" name="email" asp-for="email" placeholder="Confirm Password" aria-label="Recipient's username" aria-describedby="basic-addon2" >
                          </div>
                        <button type="submit" class="btn btn-primary w-100" >submit</button>
                        <div class="w-100 d-flex justify-content-center  mb-2">
                            <a asp-controller="Login" asp-action="Index" style="text-decoration: none;">Back to Login</a>
                        </div>
                      </form>
               



