@{
    Layout = "";
}
@model ItemModel
<thead>
            <tr>
                <th scope="col">
                    <div class="form-check">
                        <input class="form-check-input col1" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">
                            Name
                        </label>
                    </div>
                </th>
                <th scope="col">
                    <div class="form-check">
                        <label class="form-check-label" for="flexCheckDefault">
                            ItemType
                        </label>
                    </div>
                </th>
                <th scope="col">Rate</th>
                <th scope="col">Quantity</th>
                <th scope="col">Available</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.items)
            {
                <tr>
                    <th scope="row">
                        <input class="form-check-input checkedItems" type="checkbox" value="@item.Itemid" />
                        <label class="form-check-label" for="flexCheckDefault">
                            <img src="~/images/dining-menu.png" style="width:20%;" alt="">
                            <label for="" style="font-size: 14px;">@item.Itemname</label>
                        </label>

                    </th>
                    <td>@if(item.Itemtype){
                    <img src="~/images/veg-icon.svg" style="width:25px" alt="">
                }else
                {

                    <img
                            src="~/images/non-veg-icon.svg" style="width:25px" alt="">
                }
</td>
                <td>@item.Itemrate</td>
                <td>@item.Itemquantity</td>
                <td>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" @(item.Isavailable ? "checked" : "unchecked")>
                    </div>
                </td>
                <td>
                    <div class="d-flex justify-content-start w-100 pb-2 h-100">
                            <img src="~/images/pencil-square.svg" class="me-2" onclick="EditItemGet(@item.Itemid)" alt="">
                            <img src="~/images/trash-fill.svg" onclick="deleteItemGet(@item.Itemid)" style="cursor: pointer;" alt="">
                       
                    </div>
                </td>
            </tr>
}
<script>
    function EditItemGet(itemid){
        $.ajax({
                url: '@Url.Action("EditItem", "Menu")',
                method: 'GET',
                data: { itemid : itemid },
                success: function (data) {
                    console.log(data);
                }
            });
    }
</script>
</tbody>



